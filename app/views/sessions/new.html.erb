<div class="row">
  <div class="col-lg-6 ">
    <div class="login-bg">
    </div>
  </div>

  <div class="col-lg-6">
    <div class="hollys-xs center login-padding">

      <% if flash[:invalid] %>
        <div class="alert alert-danger">
          <strong><%= flash[:invalid] %></strong>
        </div>
      <% end %>

      <h2 class="hollys-big">Login</h2>

      <%= form_tag login_path do %>
        <div class="form-group">
          <%= text_field_tag :email, nil, placeholder: "Email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: "Password", class:"form-control" %>
        </div>

        <%= submit_tag "Login", class:"btn btn-outline-danger btn-lg home-btn" %>
      <% end %>

      <p style="padding-top: 20px">Don't have an account? <%= link_to "Sign up", signup_path %></p>
    </div>
  </div>
</div>
