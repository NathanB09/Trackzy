<div class="user-bg">
  <div class="center">
    <h2 class="user-heading"><%= @user.full_name %></h2>

    <div class="row user-row">
      <div class="col-lg-6">
        <div class="card user-card">
          <div class="card-header user-card-header hollys-m">Workouts (<%= @user.workouts.length %>)</div>
          <div class="card-body user-card-body">
            <% @user.workouts.each do |workout| %>
              <%= link_to workout.name, workout, class:"user-links" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card user-card">
          <div class="card-header user-card-header hollys-m">My Gyms (<%= @user.gyms.count %>)</div>
          <div class="card-body user-card-body">
            <% @user.gyms.each do |gym| %>
              <%= link_to gym.name, gym, class:"user-links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
