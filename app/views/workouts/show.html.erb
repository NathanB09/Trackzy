<div class="workout-bg">
  <div class="center">
    <h2 class="workout-heading" style="padding-top:50px"><%= @workout.name %></h2>

    <% if @user.id != current_user.id %>
      <h3><%= link_to "Workout by: #{@user.full_name}", @user, class:"workout-heading", style:"font-size:20px" %></h3>
    <% end %>

    <h3 class="workout-heading" style="font-size:20px"><%= @workout.workout_date %></h3>

    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Sets</th>
          <th>Reps</th>
          <th>Weight(kg)</th>
        </tr>
      </thead>
      <tbody>
        <% @workout.exercises.each do |exercise| %>
          <tr>
            <td><%= exercise.name.capitalize %></td>
            <td><%= exercise.sets %></td>
            <td><%= exercise.reps %></td>
            <td><%= exercise.weight_kg %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @user.id == current_user.id %>
      <div class="btn-group">
        <%= link_to "Edit", edit_workout_path(@workout), class:"btn btn-outline-danger btn-lg workout-btn" %>
        <%= link_to "Delete", workout_path(@workout),
                    method: :delete,
                    data: {confirm: "Are you sure you want to delete?"},
                    class:"btn btn-outline-danger btn-lg workout-btn" %>
      </div>
    <% end %>
  </div>
</div>
